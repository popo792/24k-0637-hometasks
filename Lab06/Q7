#include <iostream>
#include <string>
using namespace std;

class Queue {
    string patrons[100];
    int front, rear;
public:
    Queue() { front = rear = -1; }
    bool empty() { return front == -1; }
    bool full() { return rear == 99; }

    void enqueue(string name) {
        if (full()) {
            cout << "Queue full!" << endl;
            return;
        }
        if (empty()) front = 0;
        patrons[++rear] = name;
        cout << name << " joined the queue." << endl;
    }

    void dequeue() {
        if (empty()) {
            cout << "Queue empty!" << endl;
            return;
        }
        cout << patrons[front] << " completed transaction." << endl;
        if (front == rear) front = rear = -1;
        else front++;
    }

    void display() {
        if (empty()) {
            cout << "No patrons waiting." << endl;
            return;
        }
        cout << "Current queue:" << endl;
        for (int i = front; i <= rear; i++)
            cout << patrons[i] << endl;
    }
};

int main() {
    Queue q;
    int choice;
    do {
        cout << endl << "1. Add Patron  2. Complete Transaction  3. Show Queue  0. Exit" << endl;
        cout << "Choice: ";
        cin >> choice;
        if (choice == 1) {
            string name;
            cout << "Patron name: ";
            cin >> name;
            q.enqueue(name);
        } else if (choice == 2)
            q.dequeue();
        else if (choice == 3)
            q.display();
    } while (choice != 0);
}
