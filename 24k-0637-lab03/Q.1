#include <iostream>
using namespace std;

class Node {
public:
    string name;
    int price;
    Node* next;

    Node(string n, int p) {
        name = n;
        price = p;
        next = NULL;
    }
};

class LinkedList {
    Node* head;

public:
    LinkedList() {
        head = NULL;
    }

    void addFront(string n, int p) {
        Node* t = new Node(n, p);
        t->next = head;
        head = t;
    }

    void addBack(string n, int p) {
        Node* t = new Node(n, p);
        if (!head) {
            head = t;
            return;
        }
        Node* u = head;
        while (u->next) u = u->next;
        u->next = t;
    }

    void addAfter(string n, int p, string key) {
        Node* u = head;
        while (u && u->name != key) u = u->next;
        if (u) {
            Node* t = new Node(n, p);
            t->next = u->next;
            u->next = t;
        }
    }

    void find(string key) {
        Node* u = head;
        while (u) {
            if (u->name == key) {
                cout << u->name << " " << u->price << endl;
                return;
            }
            u = u->next;
        }
        cout << "Not Found" << endl;
    }

    void show() {
        Node* u = head;
        while (u) {
            cout << u->name << " " << u->price << endl;
            u = u->next;
        }
    }
};

int main() {
    LinkedList cart;

    cart.addBack("Laptop", 1000);
    cart.addBack("Phone", 700);
    cart.addBack("Tablet", 400);
    cart.addBack("Headphones", 150);

    cart.addFront("Smartwatch", 200);
    cart.addBack("Keyboard", 80);
    cart.addAfter("Monitor", 300, "Phone");

    cart.find("Tablet");
    cart.show();
}
