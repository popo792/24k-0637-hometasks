#include <iostream>
using namespace std;

void heapifyUp(int heap[], int index) {
    while (index > 0) {
        int parent = (index - 1) / 2;
        if (heap[index] <= heap[parent]) break;
        int temp = heap[index];
        heap[index] = heap[parent];
        heap[parent] = temp;
        index = parent;
    }
}

void heapifyDown(int heap[], int size) {
    int index = 0;
    while (true) {
        int left = index * 2 + 1;
        int right = index * 2 + 2;
        int largest = index;
        if (left < size && heap[left] > heap[largest]) largest = left;
        if (right < size && heap[right] > heap[largest]) largest = right;
        if (largest == index) break;
        int temp = heap[index];
        heap[index] = heap[largest];
        heap[largest] = temp;
        index = largest;
    }
}

int main() {
    int heap[10] = {1500, 1200, 1800, 1600};
    int size = 4;

    int newRating = 1700;
    heap[size] = newRating;
    heapifyUp(heap, size);
    size++;

    heap[0] = heap[size - 1];
    size--;
    heapifyDown(heap, size);

    for (int i = 0; i < size; i++) cout << heap[i] << " ";
}
