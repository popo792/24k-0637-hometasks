#include <iostream>
using namespace std;

class Box {
    int *vol;

    public:
    Box() {
        vol = new int (0);
    }
    Box (int i) {
        vol = new int (i);
    }

    Box (const Box &other) {
        vol = new int (*other.vol);
    }

    ~Box() {
        delete vol;
    }
    
    void display () const {
        cout << "Volume: "<< *vol << endl;
    }

    void changeVol (int i) {
        *vol = i;
    }
};

int main () {
    Box b1;
    Box b2 (9);
    b1.display();
    b2.display();
    Box b3 = b2;
    b3.display();
    b3.changeVol(4);
    b3.display();
    b2.display();
}
