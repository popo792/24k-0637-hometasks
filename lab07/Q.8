#include <iostream>
#include <string>
using namespace std;

struct Order {
    int orderID;
    string customerName;
    double totalPrice;
};

int partition(Order a[], int low, int high) {
    double pivot = a[high].totalPrice;
    int i = low - 1;
    for (int j = low; j < high; j++) {
        if (a[j].totalPrice < pivot) {
            i++;
            swap(a[i], a[j]);
        }
    }
    swap(a[i + 1], a[high]);
    return i + 1;
}

void quickSort(Order a[], int low, int high) {
    if (low < high) {
        int pi = partition(a, low, high);
        quickSort(a, low, pi - 1);
        quickSort(a, pi + 1, high);
    }
}

int main() {
    int n;
    cout << "Enter number of orders: ";
    cin >> n;
    Order* orders = new Order[n];
    for (int i = 0; i < n; i++) {
        cout << "Enter orderID, customerName, and totalPrice: ";
        cin >> orders[i].orderID >> orders[i].customerName >> orders[i].totalPrice;
    }
    quickSort(orders, 0, n - 1);
    cout << "Sorted Orders by Total Price:" << endl;
    for (int i = 0; i < n; i++)
        cout << orders[i].orderID << " " << orders[i].customerName << " " << orders[i].totalPrice << endl;
    delete[] orders;
}
